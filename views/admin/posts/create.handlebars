<div class="">
    <h1>Create New Post</h1>
    
    <div class="">
        <div class="">
            <form action="/admin/posts/create" method="post" enctype="multipart/form-data">
                
                <div class="">
                    <label for="title">Title</label>
                    <input type="text" class="" name="title" placeholder="Enter The Title">
                </div>
                
                <div class="">
                    <label for="file">File Upload</label>
                    <input type="file" class="" name="uploadedFile"  accept="image/jpeg, image/jpg, image/png, image/bmp">
                </div>

                <div class="">
                    <label for="status">Status</label>
                    <select name="status" class="">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                        <option value="draft">Draft</option>
                    </select>
                </div>

                <div class="">
                    <label for="urlPathConfig">URL Path</label>
                    <input type="text" class="" name="urlPathConfig" placeholder="your-blog-post-name">
                </div>

                <div class="">
                    <label for="category">Category</label>
                    <select name="category" class="">
                        {{#each categories}}
                            <option value="{{_id}}">{{title}}</option>    
                        {{/each}}
                                             
                    </select>
                </div>
                
                
                
                <div class="">
                    <label for="allowComments">
                        <input type="checkbox" class="" name="allowComments">
                        Allow Comments
                    </label>
                </div>
                
                <div class="">
                    <label for="description">Content</label>
                    <textarea name="description" class="" placeholder="Enter your content here" rows="10"></textarea>
                </div>
                
                
                <button class="" type="submit">Create Post</button>
                
                
            </form>
        </div>
    </div>
    
    
    
</div>
