<div class="">

    <!-- Blog Entries Column -->
    <div class="">

        <h1 class="">Page Heading
            <small>Secondary Text</small>
        </h1>

        <!-- Blog Post -->
        {{#each posts}}


            <div class="">
                <img src="https://placeimg.com/750/300/tech" alt="Card image cap" class="responsive-image">
                <div class="">
                    <h2 class="">{{title}}</h2>
                    <p class="">{{description}}</p>
                    <a href="/posts/{{urlPathConfig}}" class="button">Read More</a>    
                </div>                
                <div class="">
                    Posted on {{creationDate}} by
                    <a href="#">Admin</a>
                </div>
            </div>

        {{/each}}

        <!-- more pages -->
        <ul class="">
            <li class="">
                <a class="" href="/posts">More Posts</a>
            </li>
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="">

        <!-- Search Widget -->
        <div class="">
            <h5 class="">Search</h5>
            <div class="">
                <div class="">
                    <input type="text" class="" placeholder="Search for...">
                    <span class="">
                  <button class="" type="button">Go!</button>
                </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="">
            <h5 class="">Categories</h5>
            <div class="">
                <div class="">
                    <div class="">
                        <ul class="">
                            {{#each categories}}
                                <li>
                                    <a href="#">{{title}}</a>
                                </li>
                            {{/each}}

                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="">
            <h5 class="">Side Widget</h5>
            <div class="">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
        </div>

    </div>

</div>
<!-- /.row -->
