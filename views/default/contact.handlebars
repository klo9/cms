<section class="container">
    <h1>Contact Us</h1>
    <form action="/" method="POST" class="form">
        <label for="contactName">Name: </label>
        <input type="text" name="contactName" placeholder="Your Name" class="form-input">

        <label for="contactEmail">E-Mail Address: </label>
        <input type="text" name="contactEmail" placeholder="someone@example.com" class="form-input" required>

        <label for="contactMessage">Message: </label>
        <textarea name="contactMessage" placeholder="Your Message" class="form-input" rows="5" cols="50"></textarea>

        <button class="button form-submit" type="submit">Submit</button>

    </form>
</section>