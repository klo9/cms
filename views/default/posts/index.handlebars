<main class='posts-main'>

    <h1>Blog Posts</h1>
    
    <ul class="blog-list">
        {{#each posts}}
        <li id="blog-posts-li">
            <h2>{{ this.title }}</h2>
            <p>{{ this.description }}</p>
            <a href="/posts/{{ this.path }}">Read More</a>
        </li>
        {{/each}}
    </ul>

</main>